<%- include('./partials/header'); %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-80 h-[70vh] bg-zinc-100 px-4 py-5 rounded-md">
    <h1
      class="text-3xl capitalize tracking-tighte leading-none font-bold text-center text-zinc-700"
    >
      Create New Account
    </h1>
    <form action="/register" method="post" class="w-full">
      <input
        class="block w-full px-3 py-2 rounded-full focus:outline-none my-4"
        type="text"
        name="username"
        id="username"
        placeholder="username"
      />
      <input
        class="block w-full px-3 py-2 rounded-full focus:outline-none my-4"
        type="text"
        name="name"
        id="name"
        placeholder="name"
      />
      <input
        class="block w-full px-3 py-2 rounded-full focus:outline-none my-4"
        type="email"
        name="email"
        id="email"
        placeholder="email"
      />
      <input
        class="block w-full px-3 py-2 rounded-full focus:outline-none my-4"
        type="password"
        name="password"
        id="password"
        placeholder="*******"
      />

      <button
        type="submit"
        class="block w-full px-3 py-2 rounded-full focus:outline-none my-4 bg-red-600 text-white"
      >
        Create New Account
      </button>

      <a href="/" class="mt-3 block w-full text-red-400 text-center"
        >Already have an account ?</a
      >
    </form>
  </div>
</div>
<%- include('./partials/footer'); %>
